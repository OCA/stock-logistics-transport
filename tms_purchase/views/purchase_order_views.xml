<odoo>

    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.tms.purchase</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <field name="order_vehicle_count" invisible="1" />
                <field name="vehicle_ids" invisible="1" />
                <button
                    name="action_view_vehicles_button"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-car"
                    invisible="not vehicle_ids"
                >
                    <field string="Vehicles" name="vehicle_count" widget="statinfo" />
                </button>
                <button
                    name="action_view_order"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-truck"
                    invisible="not trip_id"
                >
                    <span class="o_stat_text">Trip</span>
                </button>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Trip">
                    <group>
                        <field name="trip_id" string="Trip" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="tms_custom_purchase_order_tree" model="ir.ui.view">
        <field name="name">tms.custom.purchase.order.tree</field>
        <field name="model">purchase.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="date_approve" />
                <field name="partner_id" />
                <field name="user_id" />
                <field name="origin" />
                <field name="amount_total" />
                <field name="state" />
                <field name="date_planned" />
            </tree>
        </field>
    </record>

</odoo>
