<odoo>
    <record id="sale_order_line_seat_ticket_view_form" model="ir.ui.view">
        <field name="name">trip.sale.order.line.seat.ticket.view.form</field>
        <field name="model">seat.ticket.line</field>
        <field name="priority" eval="8" />
        <field name="arch" type="xml">
            <form string="Ticket for trip:" js_class="sale_order_line_seat_ticket_form">
                <field name="order_confirmed" invisible="1" />
                <group name="trip_ticket">
                    <field name="trip_id" />
                    <field
                        name="ticket_ids"
                        domain="['&amp;', ('tms_order_id', '=', trip_id), ('available', '=', 'available')]"
                        widget="many2many_tags"
                    />
                </group>
                <footer>
                    <button
                        string="Save"
                        class="btn-primary"
                        special="save"
                        data-hotkey="q"
                    />
                    <button
                        string="Cancel"
                        class="btn-secondary"
                        special="cancel"
                        data-hotkey="x"
                    />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_seat_ticket_sale_order_line" model="ir.actions.act_window">
        <field name="name">Ticket for trip:</field>
        <field name="res_model">seat.ticket.line</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="sale_order_line_seat_ticket_view_form" />
    </record>
</odoo>
