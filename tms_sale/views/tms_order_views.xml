<odoo>

    <record id="tms_order_view_form" model="ir.ui.view">
        <field name="name">tms.order.view.form.inherit.tms.sale</field>
        <field name="model">tms.order</field>
        <field name="inherit_id" ref="tms.tms_order_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    name="action_view_sales"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-usd"
                    invisible="not sale_id"
                >
                    <span class="o_stat_text">Sale Order</span>
                    <field name="sale_id" invisible="1" />
                    <field name="sale_line_id" invisible="1" />
                </button>
            </xpath>
            <xpath expr="//page[@name='planning_page']" position="after">
                <page name="seats_page" string="Seats">
                    <field name="seat_ticket_ids">
                        <tree>
                            <field name="name" />
                            <field name="section" />
                            <field name="price" />
                            <field
                                name="available"
                                widget="badge"
                                decoration-success="available == 'available'"
                                decoration-danger="available == 'not_available'"
                            />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
