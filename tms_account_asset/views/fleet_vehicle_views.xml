<odoo>

    <record id="fleet_vehicle_view_form" model="ir.ui.view">
        <field name="name">fleet.vehicle.inherit.tms.account.asset.view.form</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                 <field name="asset_id" invisible="1" />
                 <button
                    name="action_view_asset"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-cube"
                    invisible="not asset_id"
                >
                    <div class="o_stat_info">
                        <span class="o_stat_text">Asset</span>
                    </div>
                </button>
             </xpath>
            <xpath expr="//field[@name='net_car_value']" position="after">
                <field name="actual_value" />
            </xpath>
        </field>
    </record>

    <record id="fleet_vehicle_view_search" model="ir.ui.view">
        <field name="name">fleet.vehicle.inherit.tms.account.asset.view.search</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_search" />
        <field name="arch" type="xml">
             <xpath expr="//search//separator[3]" position="after">
                 <filter
                    string="With Account Asset"
                    name="asset_id"
                    domain="[('asset_id', '!=', False)]"
                />
                <filter
                    string="Without Account Asset"
                    name="asset_id"
                    domain="[('asset_id', '=', False)]"
                />
                <separator />
             </xpath>
        </field>
    </record>

</odoo>
