<odoo>

    <record id="account_asset_view_form" model="ir.ui.view">
        <field name="name">account.asset.inherit.tms.account.asset.form</field>
        <field name="model">account.asset</field>
        <field
            name="inherit_id"
            ref="account_asset_management.account_asset_view_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <field name="vehicle_id" invisible="1" />
                <button
                    name="action_view_vehicle"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-car"
                    invisible="not vehicle_id"
                >
                    <div class="o_stat_info">
                        <span class="o_stat_text">Vehicle</span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <field name="is_vehicle" invisible="1" />
                <field name="vehicle_id" invisible="1" />
                <page name="tms" string="TMS" invisible="not is_vehicle">
                    <group name="Vehicle Information">
                        <field name="vehicle_id" readonly="True" />
                        <field
                            name="model_id"
                            readonly="vehicle_id"
                            required="is_vehicle"
                        />
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="account_asset_view_search" model="ir.ui.view">
        <field name="name">account.asset.inherit.tms.account.asset.search</field>
        <field name="model">account.asset</field>
        <field
            name="inherit_id"
            ref="account_asset_management.account_asset_view_search"
        />
        <field name="arch" type="xml">
            <xpath expr="//search//separator[2]" position="after">
                <filter
                    string="With Vehicle"
                    name="vehicle_id"
                    domain="[('vehicle_id', '!=', False)]"
                />
                <filter
                    string="Without Vehicle"
                    name="vehicle_id"
                    domain="[('vehicle_id', '=', False)]"
                />
                <separator />
            </xpath>
        </field>
    </record>

</odoo>
