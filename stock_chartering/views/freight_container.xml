<odoo>


    <record id="freight_container_form" model="ir.ui.view">
        <field name="model">freight.container</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <group name="main">
                        <group name="left">
                            <field name="name" />
                        </group>
                        <group name="right">
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id='freight_container_tree' model='ir.ui.view'>
        <field name='model'>freight.container</field>
        <field name='arch' type='xml'>
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="freight_container_search" model="ir.ui.view">
        <field name="model">freight.container</field>
        <field name="arch" type="xml">
            <search>
                <filter name="name" />
            </search>
        </field>
    </record>

    <record id="freight_container_action" model="ir.actions.act_window">
        <field name="name">Freight Containers</field>
        <field name="res_model">freight.container</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="freight_container_menu"
        parent="stock.menu_delivery"
        action="freight_container_action"
        sequence="80"
    />


</odoo>
